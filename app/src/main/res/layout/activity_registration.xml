<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Running Man Image -->
    <ImageView
        android:id="@+id/running_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/running_man"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnReturn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@null"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Registration Form -->
    <FrameLayout
        android:id="@+id/form_container"
        android:layout_width="321dp"
        android:layout_height="436dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/white_box_with_shadow"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Layout inside the form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/robotomono_bold"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="#456DB0"
                android:textSize="28sp" />

            <!-- Username Field -->
            <EditText
                android:id="@+id/etRegisterUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_edit_text"
                android:fontFamily="@font/robotomono_regular"
                android:hint="@string/enter_username"
                android:textColor="@color/black"
                android:inputType="text"
                android:padding="16dp"
                android:textSize="16sp" />

            <!-- Password Field -->
            <EditText
                android:id="@+id/etRegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edit_text"
                android:fontFamily="@font/robotomono_regular"
                android:hint="@string/enter_password"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textSize="16sp" />

            <!-- Confirm Password Field -->
            <EditText
                android:id="@+id/etRegisterPasswordRepeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edit_text"
                android:fontFamily="@font/robotomono_regular"
                android:hint="@string/confirm_password"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textSize="16sp" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="171dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_gradient_button"
                android:fontFamily="@font/robotomono_bold"
                android:text="@string/register_bold"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
