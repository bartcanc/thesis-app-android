<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- FragmentContainerView do wyświetlania zawartości zakładek -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Główna zawartość -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        >

        <!-- Powitanie użytkownika -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="343dp"
            android:layout_height="78dp"
            android:background="@drawable/rounded_button_background_main"
            android:padding="16dp"
            android:text="Welcome, TestUser!"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:fontFamily="@font/robotomono_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sekcja: Moje treningi -->
        <LinearLayout
            android:id="@+id/llMyTrainings"
            android:layout_width="343dp"
            android:layout_height="211dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button_background_main"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:focusable="true"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgPulse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pulse"
                    android:layout_marginTop="-35dp"
                    android:alpha="0.3"/>

                <ImageView
                    android:id="@+id/imgRunningMan"
                    android:layout_width="109dp"
                    android:layout_height="137dp"
                    android:src="@drawable/running_man_training"
                    android:layout_marginTop="21dp"
                    android:layout_marginHorizontal="107dp"
                     />

                <TextView
                    android:id="@+id/tvMyTrainings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My trainings"
                    android:textSize="28sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/robotomono_bold"
                    android:layout_marginTop="160dp"
                    android:layout_marginHorizontal="70dp"
                    android:gravity="center" />

            </FrameLayout>
        </LinearLayout>

        <!-- Sekcja: Forum i Odznaki -->
        <LinearLayout
            android:id="@+id/llForumAndBadges"
            android:layout_width="343dp"
            android:layout_height="360dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llMyTrainings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Forum -->
                <LinearLayout
                    android:id="@+id/llForum"
                    android:layout_width="165dp"
                    android:layout_height="172dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/rounded_button_background_main"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgForum"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="48dp"
                            android:layout_marginHorizontal="66dp"
                            android:src="@drawable/forum_logo" />

                        <ImageView
                            android:id="@+id/imgForumMessage"
                            android:layout_width="57dp"
                            android:layout_height="57dp"
                            android:src="@drawable/message_blue"
                            android:layout_marginTop="21dp"
                            android:layout_marginHorizontal="23dp"
                            android:alpha="0.3"/>

                        <TextView
                            android:id="@+id/tvForum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forum"
                            android:textSize="28sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/robotomono_bold"
                            android:layout_marginTop="120dp"
                            android:layout_marginHorizontal="39dp"
                            android:gravity="center" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Odznaki -->
                <LinearLayout
                    android:id="@+id/llBadges"
                    android:layout_width="165dp"
                    android:layout_height="172dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_button_background_main"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgBadges"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/trophy_icon"
                            android:layout_marginTop="40dp"
                            android:layout_marginHorizontal="30dp" />

                        <ImageView
                            android:id="@+id/imgStars"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/stars_icon"
                            android:layout_marginTop="15dp"
                            android:layout_marginHorizontal="75dp"
                            android:alpha="0.5"/>

                        <TextView
                            android:id="@+id/tvBadges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Badges"
                            android:textSize="26sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/robotomono_bold"
                            android:layout_marginTop="120dp"
                            android:layout_marginHorizontal="32dp"/>
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

        <!-- Sekcja: Kalkulator BMI & KCAL -->
        <LinearLayout
            android:id="@+id/llBMICalculator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button_background_main"
            android:clickable="true"
            android:focusable="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:id="@+id/imgMeter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/meter"
                    android:layout_gravity="center"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="50dp"
                    />

                <ImageView
                    android:id="@+id/imgFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/food"
                    android:layout_gravity="center"
                    android:layout_marginTop="-80dp"
                    android:alpha="0.4"/>

                <TextView
                    android:id="@+id/tvBMICalculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI &amp; KCAL Calculator"
                    android:textSize="23sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/robotomono_bold"
                    android:gravity="center"
                    android:layout_marginTop="270dp"
                    />
            </FrameLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Custom Bottom Navigation Bar -->
        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_background"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Home Tab -->
            <LinearLayout
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_nav_home"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Band Tab -->
            <LinearLayout
                android:id="@+id/btnBand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_watch"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_nav_band"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Profile Tab -->
            <LinearLayout
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_nav_profile"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Settings Tab -->
            <LinearLayout
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_nav_settings"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</FrameLayout>
