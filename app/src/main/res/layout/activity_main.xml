<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <!-- Ikona smartbanda -->
    <ImageView
        android:id="@+id/imgSmartband"
        android:layout_width="215dp"
        android:layout_height="208dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_smartband"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nagłówek: Nazwa urządzenia -->
    <TextView
        android:id="@+id/tvDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smartband D3K"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#446fb1"
        app:layout_constraintTop_toBottomOf="@id/imgSmartband"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Status połączenia -->
    <TextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvConnectionState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONNECTED"
        android:textSize="18sp"
        android:textColor="#00FF00"
        app:layout_constraintTop_toBottomOf="@id/tvConnectionStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Przyciski akcji -->
    <LinearLayout
        android:id="@+id/actionButtonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvConnectionState"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Connect -->
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        android:background="@drawable/gradient_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal" />

        <!-- Disconnect -->
        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/disconnect"
        android:background="@drawable/gradient_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal" />

        <!-- Receive Data -->
        <Button
            android:id="@+id/btnReadData"
            android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/receive_data"
        android:background="@drawable/gradient_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal" />

        <!-- Send WiFi -->
        <Button
            android:id="@+id/btnSendWifiData"
            android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/send_wifi"
        android:background="@drawable/gradient_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal" />

        <!-- Sync Time -->
        <Button
            android:id="@+id/btnSyncTime"
            android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/sync_time"
        android:background="@drawable/gradient_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal" />

        <!-- Band Info -->
        <Button
            android:id="@+id/btnBandInfo"
            android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/band_info"
        android:background="@drawable/gradient_button"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!-- Pasek nawigacyjny -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/gradient_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ikona Home -->
        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home"
            android:background="@null"
            android:contentDescription="Home"
            android:layout_weight="1" />

        <!-- Ikona Stats -->
        <ImageButton
            android:id="@+id/btnForum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_forum"
            android:background="@null"
            android:contentDescription="Forum"
            android:layout_weight="1" />

        <!-- Ikona Band -->
        <ImageButton
            android:id="@+id/btnBand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_band"
            android:background="@null"
            android:contentDescription="Band"
            android:layout_weight="1" />

        <!-- Ikona Profile -->
        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:scaleType="centerInside"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="Profile" />

        <!-- Ikona Settings -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_settings"
            android:background="@null"
            android:contentDescription="Settings"
            android:layout_weight="1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
