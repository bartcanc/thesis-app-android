<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Główna zawartość -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="12dp"
        android:clipToPadding="false"
        android:clipToOutline="false"
        android:clipChildren="false">

        <!-- Okrąg z obrazkiem -->
        <FrameLayout
            android:clipToPadding="false"
            android:clipToOutline="false"
            android:clipChildren="false"
            android:id="@+id/flProfilePicture"
            android:layout_width="225dp"
            android:layout_height="225dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            tools:ignore="MissingConstraints">

            <!-- Biały okrąg -->
            <View
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:background="@drawable/circle_shape"
                android:elevation="5dp" />

            <!-- Obrazek w środku -->
            <ImageView
                android:id="@+id/imgProfilePicture"
                android:layout_width="197dp"
                android:layout_height="197dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_icon"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_shape"
                android:clipToOutline="true"
                android:layout_margin="14dp"
                android:outlineProvider="background"
                android:elevation="5dp" />
        </FrameLayout>

        <!-- Nazwa użytkownika -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TestBart"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#456DB0"
            android:fontFamily="@font/robotomono_bold"
            app:layout_constraintTop_toBottomOf="@id/flProfilePicture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Separator -->
        <View
            android:layout_width="321dp"
            android:layout_height="4dp"
            android:background="#456DB0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Informacje o użytkowniku -->

        <!-- Separator -->
        <LinearLayout
            android:id="@+id/userInfoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUsername">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_bold"
                android:text="@string/gender_placeholder"
                android:textColor="#456DB0"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_bold"
                android:text="@string/age_placeholder"
                android:textColor="#456DB0"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_bold"
                android:text="@string/weight_placeholder"
                android:textColor="#456DB0"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_bold"
                android:text="@string/height_placeholder"
                android:textColor="#456DB0"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_bold"
                android:text="BMR"
                android:textColor="#456DB0"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_bold"
                android:text="TDEE"
                android:textColor="#456DB0"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userInfoContainer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUsername">

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_regular"
                android:text="sssss"
                android:textColor="#456DB0"
                android:textSize="24sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_regular"
                android:text="@string/placeholder"
                android:textColor="#456DB0"
                android:textSize="24sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_regular"
                android:text="@string/placeholder"
                android:textColor="#456DB0"
                android:textSize="24sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_regular"
                android:text="@string/placeholder"
                android:textColor="#456DB0"
                android:textSize="24sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tvBMR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_regular"
                android:text="@string/placeholder"
                android:textColor="#456DB0"
                android:textSize="24sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tvTDEE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomono_regular"
                android:text="@string/placeholder"
                android:textColor="#456DB0"
                android:textSize="24sp"
                android:visibility="visible"/>
        </LinearLayout>

        <View
            android:layout_width="321dp"
            android:layout_height="4dp"
            android:background="#456DB0"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/userInfoContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Przycisk wylogowania -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="231dp"
            android:layout_height="63dp"
            android:layout_marginTop="50dp"
            android:text="@string/logout"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient_button"
            android:fontFamily="@font/robotomono_bold"
            android:textSize="23sp"
            style="@style/GradientButtonStyle"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/userInfoContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Custom Bottom Navigation Bar -->
        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_background"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Home Tab -->
            <LinearLayout
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_nav_home"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Band Tab -->
            <LinearLayout
                android:id="@+id/btnBand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_watch"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_nav_band"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Profile Tab -->
            <LinearLayout
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_nav_profile"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Settings Tab -->
            <LinearLayout
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_nav_settings"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</FrameLayout>

