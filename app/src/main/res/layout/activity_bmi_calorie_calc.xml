<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/running_man_2"
        android:scaleType="fitCenter"
        android:translationX="-60dp"
        android:scaleY="1.3"
        android:scaleX="1.3"
        android:alpha="0.4"/>

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:src="@drawable/double_left_blue"
            android:contentDescription="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- BMI Calculator Button -->
        <LinearLayout
            android:id="@+id/btnBMICalculator"
            android:layout_width="315dp"
            android:layout_height="240dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/rounded_button_background_main"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgBMIMeter"
                    android:layout_width="257dp"
                    android:layout_height="135dp"
                    android:src="@drawable/meter"
                    android:alpha="0.15"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvBMICalculator"
                    android:layout_width="249dp"
                    android:layout_height="114dp"
                    android:text="@string/bmi_calculator"
                    android:textSize="40sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/robotomono_bold"
                    android:layout_marginTop="60dp"
                    android:layout_marginHorizontal="40dp"
                    android:gravity="center" />
            </FrameLayout>
        </LinearLayout>

        <!-- Calories Calculator Button -->
        <LinearLayout
            android:id="@+id/btnCaloriesCalculator"
            android:layout_width="315dp"
            android:layout_height="240dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button_background_main"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/btnBMICalculator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgCaloriesFlame"
                    android:layout_width="150dp"
                    android:layout_height="194dp"
                    android:src="@drawable/flame_purple"
                    android:alpha="0.5"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvCaloriesCalculator"
                    android:layout_width="249dp"
                    android:layout_height="114dp"
                    android:text="@string/calories_ncalculator"
                    android:textSize="40sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/robotomono_bold"
                    android:gravity="center"
                    android:layout_marginTop="60dp"
                    android:layout_marginHorizontal="40dp"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
