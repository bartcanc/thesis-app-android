<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Tło: Running Man -->
    <ImageView
        android:id="@+id/imgRunningMan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/running_man"
        android:scaleType="fitCenter" />

    <!-- Główna zawartość -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Przycisk powrotu -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

        <!-- Nagłówek -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password_header"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="240dp" />

        <!-- Pole: Reset Code -->
        <EditText
            android:id="@+id/etResetPasswordCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/reset_code_hint"
            android:inputType="text"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="@android:color/white"
            android:textColorHint="#B0B0B0"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"/>

        <!-- Pole: New Password -->
        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/new_password_hint"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="@android:color/white"
            android:textColorHint="#B0B0B0"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/etResetPasswordCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"/>

        <!-- Pole: Repeat New Password -->
        <EditText
            android:id="@+id/etRepeatNewPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/repeat_password_hint"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="@android:color/white"
            android:textColorHint="#B0B0B0"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/etNewPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"/>

        <!-- Przycisk Resetowania -->
        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="231dp"
            android:layout_height="58dp"
            android:text="@string/reset_password_button"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_gradient_button"
            android:textSize="16sp"
            android:fontFamily="@font/robotomono_bold"
            app:layout_constraintTop_toBottomOf="@id/etRepeatNewPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
