<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/double_left_blue"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
    <!-- Background -->
    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/flame_purple"
        android:layout_marginBottom="200dp"
        android:alpha="0.37"
        android:scaleType="fitCenter" />
    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="251dp"
            android:layout_height="107dp"
            android:layout_marginTop="20dp"
            android:text="Calories\nCalculator"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_marginHorizontal="80dp"
            android:textColor="#456DB0"
            android:fontFamily="@font/robotomono_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Inputs for Weight and Height -->
        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="45dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="Weight (kg)"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#456DB0"
                    android:fontFamily="@font/robotomono_bold" />

                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="145dp"
                    android:layout_height="64dp"
                    android:hint="Weight"
                    android:background="@drawable/rounded_edittext_background"
                    android:textColor="#456DB0"
                    android:fontFamily="@font/robotomono_regular"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="Height (cm)"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#456DB0"
                    android:fontFamily="@font/robotomono_bold" />

                <EditText
                    android:id="@+id/etHeight"
                    android:layout_width="145dp"
                    android:layout_height="64dp"
                    android:hint="Height"
                    android:background="@drawable/rounded_edittext_background"
                    android:textColor="#456DB0"
                    android:fontFamily="@font/robotomono_regular"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <!-- Input for Age -->
        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="140dp"
            app:layout_constraintTop_toBottomOf="@id/etWeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="Age"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#456DB0"
                android:fontFamily="@font/robotomono_bold" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="145dp"
                android:layout_height="64dp"
                android:hint="Age"
                android:background="@drawable/rounded_edittext_background"
                android:textColor="#456DB0"
                android:fontFamily="@font/robotomono_regular"
                android:gravity="center"
                android:textSize="24sp"
                android:inputType="number" />
        </LinearLayout>

        <!-- Gender Selector -->
        <LinearLayout
            android:id="@+id/llGender"
            android:layout_width="287dp"
            android:layout_height="96dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_background_with_divider"
            android:layout_marginHorizontal="70dp">

            <!-- Mężczyzna -->
            <FrameLayout
                android:id="@+id/flMale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgMale"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/male_icon" />

                    <TextView
                        android:id="@+id/tvMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="20sp"
                        android:textColor="#456DB0"
                        android:fontFamily="@font/robotomono_bold"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Znacznik -->
                <ImageView
                    android:id="@+id/imgMaleCheck"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/check_icon"
                    android:layout_gravity="end|top"
                    android:layout_margin="4dp"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Kobieta -->
            <FrameLayout
                android:id="@+id/flFemale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgFemale"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/female_icon" />

                    <TextView
                        android:id="@+id/tvFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="20sp"
                        android:textColor="#456DB0"
                        android:fontFamily="@font/robotomono_bold"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Znacznik -->
                <ImageView
                    android:id="@+id/imgFemaleCheck"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/check_icon"
                    android:layout_gravity="end|top"
                    android:layout_margin="4dp"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvActivityLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activity level"
                android:padding="8dp"
                android:textSize="20sp"
                android:gravity="center|top"
                android:textColor="#456DB0"
                android:fontFamily="@font/robotomono_bold" />

            <!-- Spinner (rozwijane menu) -->
            <Spinner
                android:id="@+id/spActivityLevel"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/rounded_spinner_background"
                android:padding="8dp"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dropdown"
                android:layout_gravity="center" />
        </LinearLayout>


        <!-- Calculate Button -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="249dp"
            android:layout_height="65dp"
            android:text="CALCULATE"
            android:layout_marginTop="36dp"
            android:background="@drawable/rounded_gradient_button"
            android:textColor="@android:color/white"
            android:fontFamily="@font/robotomono_bold"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginHorizontal="85dp"
            app:layout_constraintTop_toBottomOf="@id/llGender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>
</FrameLayout>
</FrameLayout>