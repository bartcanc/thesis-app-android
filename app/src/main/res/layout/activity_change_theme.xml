<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Tło: Running Man -->
    <ImageView
        android:id="@+id/imgRunningMan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/running_man"
        android:scaleType="fitCenter" />

    <!-- Główna zawartość -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Przycisk powrotu -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

        <!-- Nagłówek -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_theme_header"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="200dp" />

        <!-- Opcje motywów -->
        <LinearLayout
            android:id="@+id/themeOptionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Motyw: Sea Breeze -->
            <LinearLayout
                android:id="@+id/themeSeaBreeze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="20dp">

                <!-- Okrągły obrazek -->
                <FrameLayout
                    android:layout_width="134dp"
                    android:layout_height="134dp"
                    android:layout_marginBottom="-20dp"
                    android:elevation="10dp">

                    <View
                        android:layout_width="134dp"
                        android:layout_height="134dp"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="@color/white"/>

                    <ImageView
                        android:id="@+id/imgSeaBreeze"
                        android:layout_width="114dp"
                        android:layout_height="114dp"
                        android:src="@drawable/sea_breeze"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- Tekst motywu -->
                <TextView
                    android:layout_width="165dp"
                    android:layout_height="38dp"
                    android:text="@string/sea_breeze_theme"
                    android:fontFamily="@font/robotomono_bold"
                    android:textSize="20sp"
                    android:textColor="#456DB0"
                    android:gravity="center"
                    android:background="@drawable/rounded_button"
                    android:elevation="10dp"
                    android:layout_marginTop="25dp"/>
            </LinearLayout>

            <!-- Motyw: Post Modern -->
            <LinearLayout
                android:id="@+id/themePostModern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Okrągły obrazek -->
                <FrameLayout
                    android:layout_width="134dp"
                    android:layout_height="134dp"
                    android:layout_marginBottom="-20dp"
                    android:elevation="10dp">

                    <View
                        android:layout_width="134dp"
                        android:layout_height="134dp"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="@color/white"/>

                    <ImageView
                        android:id="@+id/imgPostModern"
                        android:layout_width="114dp"
                        android:layout_height="114dp"
                        android:src="@drawable/post_modern"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- Tekst motywu -->
                <TextView
                    android:layout_width="165dp"
                    android:layout_height="38dp"
                    android:text="@string/post_modern_theme"
                    android:fontFamily="@font/robotomono_bold"
                    android:textSize="20sp"
                    android:textColor="#456DB0"
                    android:gravity="center"
                    android:background="@drawable/rounded_button"
                    android:elevation="10dp"
                    android:layout_marginTop="25dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
