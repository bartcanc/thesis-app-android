<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Gradientowe tło -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Przycisk powrotu -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:src="@drawable/ic_back_arrow" />

        <!-- Nagłówek -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTrainingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:fontFamily="@font/robotomono_bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgCalendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/tvTrainingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MON, 09/12/2024"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Zawartość: Graf -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_background"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvGraphTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/speed_graph"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#456DB0"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/robotomono_bold" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
