<FrameLayout
    android:id="@id/frameLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background">

    <!-- Gradientowe tło -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Przycisk powrotu -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp" />
        <!-- Główna zawartość -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <!-- Nagłówek -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTrainingName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running_03"
                    android:textSize="36sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/tvTrainingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MON, 09/12/2024"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Opcje treningu -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="16dp"
                android:gravity="center"
                android:layout_marginTop="60dp">

                <!-- Przycisk: Speed Graph -->
                <LinearLayout
                    android:id="@+id/btnSpeedGraph"
                    android:layout_width="325dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/rounded_corner_background"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/running_icon"
                            android:translationX="35dp"
                            />

                        <TextView
                            android:id="@+id/tvSpeedGraph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/speed_graph"
                            android:textSize="24sp"
                            android:textColor="#456DB0"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_margin="10dp"
                            android:layout_gravity="bottom|right"/>
                    </FrameLayout>


                </LinearLayout>

                <!-- Przycisk: Heartrate Graph -->
                <LinearLayout
                    android:id="@+id/btnHeartrateGraph"
                    android:layout_width="325dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/rounded_corner_background"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/heartrate_icon"
                            android:alpha="0.4"/>

                        <TextView
                            android:id="@+id/tvHeartrateGraph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/heartrate_graph"
                            android:textSize="24sp"
                            android:textColor="#456DB0"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_gravity="bottom|right"
                            android:layout_margin="10dp" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Sekcja informacji: Time, Calories, Distance, Steps, BPM -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Time -->
                    <LinearLayout
                        android:layout_width="325dp"
                        android:layout_height="57dp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_corner_background"
                        android:gravity="center"
                        android:elevation="4dp"
                        android:layout_marginBottom="8dp">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/time_icon"
                                android:layout_marginHorizontal="60dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/time"
                                android:textSize="20sp"
                                android:textColor="#456DB0"
                                android:textStyle="bold"
                                android:layout_gravity="left|center"
                                android:layout_marginHorizontal="20dp" />

                            <TextView
                                android:id="@+id/tvTimeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00:00"
                                android:textSize="20sp"
                                android:textColor="#456DB0"
                                android:textStyle="bold"
                                android:layout_gravity="right|center"
                                android:layout_marginHorizontal="20dp" />
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Calories & Distance -->
                    <LinearLayout
                        android:layout_width="325dp"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="148dp"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_corner_background"
                            android:elevation="4dp"
                            android:gravity="center"
                            android:layout_marginEnd="30dp">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/calories_icon"
                                    android:layout_gravity="right"
                                    android:layout_marginHorizontal="20dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calories"
                                    android:textSize="20sp"
                                    android:textColor="#456DB0"
                                    android:textStyle="bold"
                                    android:layout_margin="10dp" />

                                <TextView
                                    android:id="@+id/tvCaloriesValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="470 kcal"
                                    android:textSize="30sp"
                                    android:textColor="#456DB0"
                                    android:textStyle="bold"
                                    android:layout_margin="16dp"
                                    android:layout_gravity="bottom|left"/>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="148dp"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_corner_background"
                            android:elevation="4dp"
                            android:gravity="center">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/distance_icon"
                                    android:layout_gravity="right"
                                    android:layout_marginHorizontal="20dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/distance"
                                    android:textSize="20sp"
                                    android:textColor="#456DB0"
                                    android:textStyle="bold"
                                    android:layout_margin="10dp"/>

                                <TextView
                                    android:id="@+id/tvDistanceValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5.78 km"
                                    android:textSize="24sp"
                                    android:textColor="#456DB0"
                                    android:textStyle="bold"
                                    android:layout_margin="16dp"
                                    android:layout_gravity="bottom|left"/>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Steps & BPM -->
                    <LinearLayout
                        android:layout_width="325dp"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginVertical="30dp">

                        <LinearLayout
                            android:layout_width="148dp"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_corner_background"
                            android:elevation="4dp"
                            android:gravity="center"
                            android:layout_marginEnd="30dp">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/steps_icon"
                                    android:layout_gravity="right"
                                    android:layout_marginHorizontal="20dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/avg_steps"
                                    android:textSize="20sp"
                                    android:textColor="#456DB0"
                                    android:textStyle="bold"
                                    android:layout_margin="10dp"/>

                                <TextView
                                    android:id="@+id/tvStepsValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7000"
                                    android:textSize="30sp"
                                    android:textColor="#456DB0"
                                    android:textStyle="bold"
                                    android:layout_margin="16dp"
                                    android:layout_gravity="bottom|left"/>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="148dp"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_corner_background"
                            android:elevation="4dp"
                            android:gravity="center">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/bpm_icon"
                                    android:layout_gravity="right"
                                    android:layout_marginHorizontal="20dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/avg_bpm"
                                    android:textSize="20sp"
                                    android:textColor="#456DB0"
                                    android:textStyle="bold"
                                    android:layout_margin="10dp" />

                                <TextView
                                    android:id="@+id/tvBPMValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="150 BMP"
                                    android:textSize="28sp"
                                    android:textColor="#456DB0"
                                    android:textStyle="bold"
                                    android:layout_margin="16dp"
                                    android:layout_gravity="bottom|left"/>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
